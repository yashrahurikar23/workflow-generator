{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI Server (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8004"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend",
        "ENVIRONMENT": "development"
      },
      "python": "${workspaceFolder}/backend/.venv/bin/python",
      "django": false,
      "justMyCode": false
    }
  ]
}
